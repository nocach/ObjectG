<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:mem:db1;DB_CLOSE_DELAY=-1;MVCC=TRUE</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>
        <property name="connection.pool_size">1</property>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create</property>

        <mapping class="cz.nocach.masaryk.objectg.fixtures.domain.Agent"></mapping>
        <mapping class="cz.nocach.masaryk.objectg.fixtures.domain.Customer"></mapping>
        <mapping class="cz.nocach.masaryk.objectg.fixtures.domain.Departure"></mapping>
        <mapping class="cz.nocach.masaryk.objectg.fixtures.domain.Destination"></mapping>
        <mapping class="cz.nocach.masaryk.objectg.fixtures.domain.DestLink"></mapping>
        <mapping class="cz.nocach.masaryk.objectg.fixtures.domain.Guide"></mapping>
        <mapping class="cz.nocach.masaryk.objectg.fixtures.domain.GuideAssignment"></mapping>
        <mapping class="cz.nocach.masaryk.objectg.fixtures.domain.Money"></mapping>
        <mapping class="cz.nocach.masaryk.objectg.fixtures.domain.Person"></mapping>
        <mapping class="cz.nocach.masaryk.objectg.fixtures.domain.Person2Address"></mapping>
        <mapping class="cz.nocach.masaryk.objectg.fixtures.domain.Preference"></mapping>
        <mapping class="cz.nocach.masaryk.objectg.fixtures.domain.Reservation"></mapping>
        <mapping class="cz.nocach.masaryk.objectg.fixtures.domain.Tour"></mapping>
        <mapping class="cz.nocach.masaryk.objectg.fixtures.domain.TourSeason"></mapping>
        <mapping class="cz.nocach.masaryk.objectg.fixtures.domain.TourStop"></mapping>
    </session-factory>

</hibernate-configuration>